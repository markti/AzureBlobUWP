<Page
    x:Class="BlobExplorer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BlobExplorer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    >

    <Page.Resources>

        <DataTemplate x:Key="HamburgerMenuItem">
            <Grid Width="240" Height="48">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="48" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <FontIcon Grid.Column="0" 
                          Margin="12,12,11,12" 
                          FontFamily="Segoe MDL2 Assets" 
                          Glyph="{Binding Glyph}"
                          Foreground="White" />
                <TextBlock Grid.Column="1" 
                           Text="{Binding Label}" 
                           Foreground="White" 
                           FontSize="16" 
                           VerticalAlignment="Center" />
            </Grid>
        </DataTemplate>



        <DataTemplate x:Key="HamburgerMenuImageItem">
            <Grid Width="240" Height="48">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="48" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Image Source="{Binding Glyph}" 
                       Stretch="UniformToFill" 
                       Margin="12,12,11,12" />
                <TextBlock Grid.Column="1" 
                           Text="{Binding Label}" 
                           Foreground="White" 
                           FontSize="16" 
                           VerticalAlignment="Center" />
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <controls:HamburgerMenu x:ConnectionId='1'
            PaneBackground="{Binding PaneBackground.Value}" x:Name="HamburgerMenuControl"
            Foreground="White"
            ItemTemplate="{StaticResource HamburgerMenuImageItem}"
            OptionsItemTemplate="{StaticResource HamburgerMenuItem}"
                                                 
                                                               
            HamburgerWidth="48"
            >
        </controls:HamburgerMenu>
    </Grid>
</Page>

